<ol class="breadcrumb">
	{foreach $cascade as $item}
		{if !$iterator->isFirst()}
			{var $name .= '.' . $item->getName()}
			<li><a n:href="$name">{$item->getTitle()|translate}</a></li>
		{else}
		{var $name = $item->getName()}
			<li class="active">{$item->getTitle()|translate}</li>
		{/if}
	{/foreach}
</ol>
