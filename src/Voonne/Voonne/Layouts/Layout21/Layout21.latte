<div class="col-xs-12 col-md-8 col-lg-9">
	{foreach $elements[\Voonne\Voonne\Content\ContentManager::POSITION_LEFT] as $index => $panel}
		{if $panel instanceof \Voonne\Voonne\Panels\BasicPanel}
			<div class="panel">
				<div class="panel-header">
					<h3>{$panel->getTitle()}</h3>
				</div>
				<div class="panel-body">
					{control 'element_left_' . $index}
				</div>
			</div>
		{elseif $panel instanceof \Voonne\Voonne\Panels\BlankPanel}
			{control 'element_left_' . $index}
		{/if}
	{/foreach}
</div>
<div class="col-xs-12 col-md-4 col-lg-3">
	{foreach $elements[\Voonne\Voonne\Content\ContentManager::POSITION_RIGHT] as $index => $panel}
		{if $panel instanceof \Voonne\Voonne\Panels\BasicPanel}
			<div class="panel">
				<div class="panel-header">
					<h3>{$panel->getTitle()}</h3>
				</div>
				<div class="panel-body">
					{control 'element_right_' . $index}
				</div>
			</div>
		{elseif $panel instanceof \Voonne\Voonne\Panels\BlankPanel}
			{control 'element_right_' . $index}
		{/if}
	{/foreach}
</div>
